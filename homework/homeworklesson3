INSERT INTO Products (ProductID, ProductName, Price)
VALUES (2, 'Phone', 800.00);     -- Telefon narxi 800

INSERT INTO Products (ProductID, ProductName, Price)
VALUES (3, 'Book', 15.50);       -- Kitob narxi 15.50
